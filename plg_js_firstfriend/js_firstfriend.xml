<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="user" method="upgrade">
	<name>PLG_JSFIRSTFRIEND_TITLE</name>
	<author></author>
	<creationDate>June 2016</creationDate>
	<copyright>2016</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>1.0</version>
	<description>PLG_JSFIRSTFRIEND_XML_DESCRIPTION</description>
	<files>
		<file plugin="sitefriend">js_firstfriend.php</file>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_js_firstfriend.sys.ini</language>
	</languages>		
        <config>
        	<fields name="params">
            	<fieldset name="basic">
					<field name="friendid" type="text" default="" label="PLG_JSFIRSTFRIEND_USERID_LABEL" description="PLG_JSFIRSTFRIEND_USERID_DESC" />
					<field name="sendpm" type="list" default="1" label="Send Private Message" description="Send a private message to new users upon registration.">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
					</field>
				</fieldset>
				<fieldset name="pmsettings" label="PLG_JSFIRSTFRIEND_PMSETTINGS_LABEL">
					<field name="pmsubject" type="text" default="PLG_JSFIRSTFRIEND_PMSETTINGS_DEFSUBJECT" label="Subject" description="PLG_JSFIRSTFRIEND_PMSETTINGS_DEFSUBJECT_DESC" size="50" />
					<field name="pmmessage" type="textarea" rows="15" cols="30" default="PLG_JSFIRSTFRIEND_PMSETTINGS_DEFMESSAGE"  label="PLG_JSFIRSTFRIEND_PMSETTINGS_DEFMESSAGE_LABEL" description="PLG_JSFIRSTFRIEND_PMSETTINGS_DEFMESSAGE_DESC"/>		
          		</fieldset>
        	</fields>
        </config>
</extension>